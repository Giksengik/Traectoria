<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:id="@+id/serviceIcon"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/serviceName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/serviceIcon"
        tools:text="Крутой сервис Крутой сервис Крутой сервис Крутой сервис Крутой сервис Крутой сервис"
        android:paddingHorizontal="8dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:textColor="@color/textPrimary"
        />
    <TextView
        android:id="@+id/serviceDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="16dp"
        tools:text="Крутой сервис Крутой сервис Крутой сервис Крутой сервис Крутой сервис Крутой сервис"
        app:layout_constraintTop_toBottomOf="@id/serviceName"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textColor="@color/textPrimary"/>

    <TextView
        android:id="@+id/serviceLink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="16dp"
        tools:text="Крутой сервис Крутой сервис Крутой сервис Крутой сервис Крутой сервис Крутой сервис"
        app:layout_constraintTop_toBottomOf="@id/serviceDescription"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:textColor="@color/textPrimary"/>

</androidx.constraintlayout.widget.ConstraintLayout>
